<%= form_for([defined?(@campaign) ? @campaign: nil, @game].compact) do |f| %>
  <%= render partial: 'shared/error_list', locals: {model: @game} %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control', autofocus: true %>
  </div>

  <div class="form-group">
    <%= f.label :status %>
    <%= f.select :status, ['active', 'hidden', 'archived'], {}, class: 'form-control' %>
  </div>

  <%= f.fields_for :board, include_id: false do |board_form| %>
    <div class="form-group">
      <%= board_form.label :grid_color %>
      <div data-color-picker data-attributes="<%= { inputName: 'game[board_attributes][grid_color]', selectedValue: board_form.object.grid_color }.to_json %>"></div>
    </div>

    <div class="form-group">
      <%= board_form.label :background_image %>
      <div data-image-picker data-attributes="<%= { inputName: 'game[board_attributes][background_image_id]', images: BackgroundImage.order(:filename), selectedId: board_form.object.background_image_id }.to_json %>"></div>
    </div>
  <% end %>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>


