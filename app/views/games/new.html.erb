<h1>New game</h1>

<%= form_for(@game) do |f| %>
  <% if @game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
        <% @game.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :status %><br />
    <%= f.select :status, Game::STATUS.values %>
  </div>

  <div class="field">
    <%= label_tag 'background_image', 'Background' %>
    <%= select_tag 'background_image', options_from_collection_for_select(get_board_backgrounds, :last, :first) %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


