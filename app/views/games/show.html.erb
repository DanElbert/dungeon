<% content_for :header do %>
  <%= javascript_include_tag "games" %>
  <%= javascript_include_tag "/game_server/client.js" %>
<% end %>

<div id="game_container">

  <div id="initiative_panel" class="closed">
    <div id="initiative_toggle">
      Open
    </div>

    <div id="initiative_controls" style="display: none;">
      <table id="newInitForm">
        <tr>
          <td id="name_col">Name</td>
          <td id="val_col">Initiative</td>
          <td id="button_col"></td>
        </tr>
        <tr>
          <td><input type="text" id="initiative_name_input" /></td>
          <td><input type="text" id="initiative_value_input" /></td>
          <td><input type="button" id="initiative_add_button" value="Add" /></td>
        </tr>
      </table>

      <ul id="initiative_list"></ul>
    </div>
  </div>

  <div id="game_header">
    <div style="float: left;">
      <label for="zoom_level">Zoom:</label>
      <input type="text" id="zoom_level" style="font-weight: bold; width: 50px;" />
    </div>
    <div style="float: left; margin-left: 20px;">
      <div id="zoom_slider"></div>
    </div>
    <br style="clear: both;" />

  </div>

  <div id="game_gutter">

    <div id="tool_menu" class="toolMenu"></div>
    <div id="tool_color" class="toolMenu"></div>
    <div id="tool_line_width" class="toolMenu"></div>

    <div id="undo_button" class="tool">Undo</div>

  </div>

  <div id="game_board_container">
    <canvas id="game_board" ></canvas>
  </div>

  <br style="clear: both;"/>
</div>
<script type="text/javascript">
  BOARD_DATA_URL = '<%= get_game_board_game_path(@game) %>';
  GAME_SERVER_URL = '/game_server';
  GAME_ID = <%= @game.id %>;
  USER_ID = <%= current_user.id %>;
  USER_AUTH_TOKEN = '<%= current_user.auth_token %>';

</script>