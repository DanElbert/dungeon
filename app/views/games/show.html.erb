<% content_for :header do %>
  <%= javascript_include_tag "games/index" %>
  <%= javascript_include_tag "/game_server/client.js" %>
<% end %>

<div id="game_container">

  <%= render partial: 'initiative' %>

  <div id="game_header">
    <h3 class="title"><%= link_to "Dungeon", lobby_path, style: 'text-decoration: none;' %></h3>
    <div style="float: left;">
      <label id="zoom_level_label" for="zoom_level">Zoom:</label>
      <input type="text" id="zoom_level" />
    </div>
    <div style="float: left; margin-left: 20px;">
      <div id="zoom_slider"></div>
    </div>
    <br style="clear: both;" />

  </div>

  <div id="game_gutter">

    <div id="tool_menu" class="toolMenu"></div>
    <div id="tool_color" class="toolMenu"></div>
    <div id="tool_line_width" class="toolMenu"></div>
    <div id="fog_tool_line_width" class="toolMenu"></div>

    <div id="undo_button" class="tool">Undo</div>

  </div>

  <div id="game_board_container">
    <canvas id="game_board" ></canvas>
  </div>

  <br style="clear: both;"/>
</div>
<script type="text/javascript">
  BOARD_DATA_URL = '<%= get_game_data_game_path(@game) %>';
  GAME_SERVER_URL = '/game_server';
  GAME_ID = <%= @game.id %>;
  USER_ID = <%= current_user.id %>;
  USER_AUTH_TOKEN = '<%= current_user.auth_token %>';

</script>