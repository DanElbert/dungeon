<% content_for :header do %>
  <%= javascript_include_tag "games" %>
  <%= javascript_include_tag "#{GAME_SERVER_URL}/client.js" %>
<% end %>

<div id="game_header">
  <button id="tool_pointer">Pointer</button>
  <button id="tool_pen">Pen</button>
  <button id="tool_color_button">Color</button>
  <input type="hidden" id="tool_color" />
  <div id="tool_color_menu">

  </div>
  <input type="text" id="tool_width" />
</div>

<div id="game_gutter">
  <label for="zoom_level">Zoom:</label><br />
  <input type="text" id="zoom_level" style="font-weight: bold; width: 50px;" />
  <div id="zoom_slider" style="height: 200px;"></div>
</div>

<div id="game_board_container">
  <canvas id="game_board" ></canvas>
</div>

<br style="clear: both;"/>

<script type="text/javascript">
  var BOARD_DATA_URL = '<%= get_game_board_game_path(@game) %>';
  var BOARD_DRAWING_URL = '<%= drawing_game_path(:id => @game.id) %>';

  var GAME_SERVER_URL = '<%= GAME_SERVER_URL %>';


</script>